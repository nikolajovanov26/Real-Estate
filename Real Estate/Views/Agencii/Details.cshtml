@model Real_Estate_Project.Models.Agencija

@{
    ViewData["Title"] = "Details";
}

<h1>Agencija</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Ime)</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatumOsnovanje)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumOsnovanje)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provizija)
        </dt>
        <dd class="col-sm-10">
            @if (@Model.Provizija > 0)
            {@Html.DisplayFor(model => model.Provizija)}
            @if (@Model.Provizija > 0)
            {<span> %</span>}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prodadeni)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prodadeni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prodadeni)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prodadeni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nedviznosti)
        </dt>
        <dd class="col-sm-10">
            @foreach (var ned in Model.Nedviznosti)
            {
                <a asp-controller="Nedviznosti" asp-action="Details" asp-route-id="@ned.Id">
                    @ned.Ime
                </a> <br />
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>}
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {<p style="display:inline-block"> | </p> }

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
<a asp-action="Index">Back to List</a>}
    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
<a asp-controller="Nedviznosti" asp-action="Index">View all</a>}

</div>